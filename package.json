{
	"name": "accordproject-vscode-plugin",
	"description": "Accord Project ",
	"author": "Clause",
	"license": "Apache-2.0",
	"version": "0.0.1",
	"publisher": "accordproject",
	"repository": {
		"type": "git",
		"url": "https://github.com/accordproject/ergo-vscode-plugin"
	},
	"engines": {
		"vscode": "^1.15.0"
	},
	"scripts": {
		"postinstall": "cd server && npm install && cd ../client && npm install && cd ..",
		"compile": "tsc -p client/tsconfig.json && cd server && npm run installServer && cd .. && tsc -p server/tsconfig.json",
		"compile:client": "tsc -p client/tsconfig.json",
		"watch:client": "tsc -w -p client/tsconfig.json",
		"compile:server": "cd server && npm run installServer && cd .. && tsc -p server/tsconfig.json",
		"watch:server": "cd server && npm run installServer && cd .. && tsc -w -p server/tsconfig.json",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"licchk": "license-check-and-add",
		"package:vsix": "node ./node_modules/vsce/out/vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.48",
		"@types/node": "^6.0.101",
		"typescript": "^2.7.2",
		"vsce": "^1.39.0",
		"vscode": "^1.1.5"
	},
	"license-check-and-add-config": {
		"folder": ".",
		"license": "LICENSE.txt",
		"exact_paths_method": "EXCLUDE",
		"exact_paths": [
		  "node_modules",
		  "out",
		  "server",
		  ".vscode-test",
		  "coverage"
		],
		"file_type_method": "EXCLUDE",
		"file_types": [
		  ".txt",
		  ".vsix"
		],
		"insert_license": false,
		"license_formats": {
		  "ts|acl|cto|js|qry|ergo|tem": {
			"prepend": "/*",
			"append": "*/",
			"eachLine": {
			  "prepend": " * "
			}
		  },
		  "vscodeignore": {
			"eachLine": {
			  "prepend": "# "
			}
		  },
		  "md": {
			"file": "../markdown-license.txt"
		  }
		}
	}
}
